<h1><%= t('.create_badge') %> </h1>

<div class="mb-5">
<%= form_with model: @new_badge do |form| %>
   <%= render 'errors', resource: @new_badge %>  
    <div class="form-group">
      <%= form.label :title, for: 'foo' %>
      <%= form.text_field :title, class: 'form-control', id: 'foo' %>
    </div>
    <div class="form-group">
      <%= form.label :url, for: 'bar' %>
      <%= form.text_field :url, id: 'bar', class: 'form-control' %>
    </div>
    <%= form.submit class: 'btn btn-primary' %>
<% end %>
</div>

<h1><%= t('.badges_list') %> </h1>

<table class="table">
  <thead>
    <tr>
      <th>
        Title
      </th>
      <th>
        URL
      </th>  
      <th>
        Action?
      </th>    
    </tr>

  </thead>
  <tbody>
    <%= render @badges %>
  </tbody>
</table>

