<%= form_with model: @badge do |form| %>
  <%= render 'errors', resource: @badge %>
  <div class="form-group">
    <%= form.label :title, for: 'foo' %>
    <%= form.text_field :title, class: 'form-control', id: 'foo' %>
  </div>
  <div class="form-group">
    <%= form.label :url, for: 'bar' %>
    <%= form.text_field :url, id: 'bar', class: 'form-control' %>
  </div>
  <%= form.submit class: 'btn btn-primary' %>
<% end %>
