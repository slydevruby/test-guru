<header class="header">
  <%= link_to root_path, class: 'btn btn--accent' do %>
    <i class="bi bi-rocket-takeoff"></i>
    Test
  <% end %>
  <% if current_user.is_a?(Admin) %>
    <%= link_to admin_tests_path, class: 'btn' do %>
      <i class="bi bi-list-stars"></i>
      <%= t('.admin_panel') %>
    <% end %>
    <%= link_to 'Cats', admin_categories_path, class: 'btn' %>
    <%= link_to badges_path, class: 'btn' do %>
      <i class="bi bi-award"></i>
      Badges
    <% end %>
    <%= link_to t('.gist_panel'), admin_gists_path, class: 'btn' %>
  <% end %>
  <% if user_signed_in? %>
    <span class="welcome">
      <%= t('welcome', email: current_user.email) %>
    </span>
    <%= link_to t('signout'), destroy_user_session_path, data: { turbo_method: :delete },class: 'btn'  %>
  <% else %>
    <%= link_to t('signin'), new_user_session_path, class: 'btn welcome' %>
    <%= link_to t('signup'), new_user_registration_path, class: 'btn' %>
  <% end %>
</header>