<h1>Список вопросов</h1>

<table style="border: solid 1px">
  <tr>
    <td>Вопрос</td>
    <td>Ответ</td>
    <td colspan=2>Правильно</td>
    
  </tr>

<% @answers.each do |answer| %>

  <tr>
  <td><%= answer.question.body %></td>
  <td><%= link_to "#{answer.body}",  tests_answer_path(answer) %></td>
  <td>correct: <%= answer.correct %></td>
  <td><%= link_to 'Удалить', tests_answer_path(answer), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>

</table>

