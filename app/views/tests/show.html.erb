<h1> Тест "<%= @test.title %>" </h1>

<ol>
<% @test.questions.each do |question| %>
  <li>
  <%= link_to question.body, edit_question_path(question) %> | 
    <small>
    <%= link_to 'Удалить вопрос', question_path(question), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>  
   </small>
  </li>
  <br>

  <%= render "questions/answers", question: question %>

  <hr/>
<% end %>

</ol>

<%= form_with model: [ @test, @test.questions.build ] do |form| %>
  <p>
    <%= form.label :body, "Добавить вопрос" %><br>
    <%= form.text_field :body %>
  </p>

  <p>
    <%= form.submit "Добавить к тесту" %>
  </p>
<% end %>


