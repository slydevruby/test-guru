

<%= @question.body %>
<br/>

<ul>
<% @question.answers.each do |answer| %>
  <li>
  Ответ: <%= answer.body %>
  <% if answer.correct %>
    Правильный
  <% end %>
  </li>
<% end %>
</ul>


<hr/>

<h2>Добавить ответ</h2>
<%= form_with model: [ @test, @question, @question.answers.build ] do |form| %>
  <div>
    <%= form.label :body %><br>
    <%= form.text_field :body %>
  </div>
  <div>
    <%= form.label :correct %><br>
    <%= form.check_box :correct %>
  </div>

  <div>
    <%= form.submit "Добавить ответ" %>
  </div>
<% end %>

