<%= form_with model: [:admin, @test], data: { turbo: false } do |form| %>
  <%= render 'errors', object: @test %>
  <div>
    <%= form.label 'Категория' %>
    <%= form.collection_select :category_id,
  Category.order(:title), :id, :title %>
  </div>
  <div>
    <%= form.label 'Автор' %>
    <%= form.collection_select :author_id,
  Admin.order(:first_name), :id, :first_name %>
  </div>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :level %><br>
    <%= form.number_field :level, in: 1..10 %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
