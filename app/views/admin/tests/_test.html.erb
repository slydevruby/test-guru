<tr>
  <td class="align-middle">
    <%= content_tag :span, test.title, class: 'test-title', data: { test_id: test.id } %>
    <%= render 'form_inline', test: test == @test ? @test : test %>
  </td>
  <td class="align-middle"><%= test.category.title %></td>
  <td class="align-middle"><%= test_level(test.level) %></td>
  <td class="align-middle"><%= test.questions.count %></td>
  <td class="align-middle"><%= link_to t('.show'), admin_test_path(test), class: 'btn btn-primary' %></td>
  <td class="align-middle">
    <%= link_to t('.edit_inline'),
      edit_admin_test_path(test),
      data: { test_id: test.id }, class: 'form-inline-link'
     %> |
    <%= link_to t('.edit'), edit_admin_test_path(test) %>
  </td>
  <td class="align-middle">
    <%= link_to t('.delete'), admin_test_path(test), 
    class: 'btn btn-danger', data: {
                    turbo_method: :delete,
                    turbo_confirm: t('confirm_delete')
                  } %>
  </td>
</tr>
