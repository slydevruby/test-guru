<tr>
  <td><%= test.title %> </td>
  <td><%= test.category.title %></td>
  <td><%= test_level(test.level) %></td>
  <td><%= test.questions.count %></td>
  <td><%= link_to t('.show'), admin_test_path(test), class: 'btn btn-primary' %></td>
  <td><%= link_to t('.edit'), edit_admin_test_path(test), class: 'btn btn-primary' %>
  </td>
  <td>
    <%= link_to t('.delete'), admin_test_path(test), 
    class: 'btn btn-danger', data: {
                    turbo_method: :delete,
                    turbo_confirm: t('confirm_delete')
                  } %>
  </td>
</tr>
