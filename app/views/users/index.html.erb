Список пользователей
<table>
<% console %>
<% @users.each do |user| %>
  <tr>
    <td>
  <%= link_to user.name, user %> </td>
  <td>
    <%= user.email %>
  </td>

  <td><%= link_to "Править", edit_user_path(user) %>
  <td>
  <%= link_to "Удалить", user_path(user), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>  </td>

  </tr>
<% end %>
</table>

<br/>
<%= link_to "Новый пользователь", new_user_path %>
